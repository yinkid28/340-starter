<h1><%= title %></h1>
<%- messages() %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<p>You are logged in.</p>

<div class="account-management">
  <h3>Account Management</h3>
  <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
</div>

<div class="test-drive-section">
  <h3>Test Drives</h3>
  <p><a href="/test-drive/my-bookings">My Test Drive Bookings</a></p>
</div>

<% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
  <div class="inventory-management">
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  </div>

  <div class="test-drive-management">
    <h3>Test Drive Management</h3>
    <p><a href="/test-drive/manage">Manage All Test Drive Bookings</a></p>
  </div>
<% } %>